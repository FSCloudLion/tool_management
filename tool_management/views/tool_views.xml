<odoo>
    <record id="view_tool_tool_list" model="ir.ui.view">
    <field name="name">tool.tool.list</field>
    <field name="model">tool.tool</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="serial_number"/>
            <field name="is_available"/>
        </list>
    </field>
    </record>


    <record id="view_tool_tool_form" model="ir.ui.view">
        <field name="name">tool.tool.form</field>
        <field name="model">tool.tool</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="%(action_tool_request)d" type="action" string="View Requests" class="btn-primary" />
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="serial_number"/>
                        <field name="is_available" readonly="1"/>
                        <field name="current_request_id" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_tool_tool" model="ir.actions.act_window">
        <field name="name">Tools</field>
        <field name="res_model">tool.tool</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="tool_management_root" name="Tool Management" sequence="10"/>
    <menuitem id="tool_menu_tools" name="Tools" parent="tool_management_root" action="action_tool_tool" sequence="20"/>
</odoo>